<script>
    window.onload = function () {
        // Circular Scrolling Effect
        const carousel = document.getElementById('gem-carousel');

        const moveFirstCardToEnd = () => {
            const firstCard = carousel.firstElementChild;
            const cardWidth = firstCard.offsetWidth;

            if (carousel.scrollLeft >= cardWidth) {
                carousel.appendChild(firstCard);
                carousel.scrollLeft -= cardWidth;
            }
        };

        let scrollInterval = setInterval(() => {
            carousel.scrollLeft += 1;
            moveFirstCardToEnd();
        }, 20);

        carousel.addEventListener('scroll', moveFirstCardToEnd);

        // Countdown Timer
        document.querySelectorAll('.countdown').forEach(element => {
            const targetTime = new Date(element.getAttribute('data-time'));
            const updateCountdown = () => {
                const now = new Date();
                const timeLeft = targetTime - now;
                const hours = String(Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60))).padStart(2, '0');
                const minutes = String(Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60))).padStart(2, '0');
                const seconds = String(Math.floor((timeLeft % (1000 * 60)) / 1000)).padStart(2, '0');
                element.textContent = `${hours}:${minutes}:${seconds}`;
                if (timeLeft < 0) element.textContent = "Ended";
            };
            updateCountdown();
            setInterval(updateCountdown, 1000);
        });
    };
</script>


