@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
@model Gem_Auctions_Web.Models.ListingsVM

@{
    ViewData["Title"] = "Create";
}

<h2 id="form-title">Create Listing</h2>

<hr id="form-divider" />

<div class="row" id="form-container">
    <div class="col-md-4" id="form-wrapper">
        <form asp-action="Create" enctype="multipart/form-data" style="display: flex; flex-direction: column; gap: 1.5rem;">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="color: #d9534f;"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label" style="font-weight: 500;">Title</label>
                <input asp-for="Title" class="form-control form-input" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label" style="font-weight: 500;">Description</label>
                <input asp-for="Description" class="form-control form-input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label" style="font-weight: 500;">Starting Bid</label>
                <input asp-for="Price" class="form-control form-input" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label" style="font-weight: 500;">Image</label>
                <input asp-for="Image" class="form-control form-input" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="IdentityUserId" value="@userManager.GetUserId(User)" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form-button" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 2rem;">
    <a asp-action="Index" id="back-link">Back to List</a>
</div>

