@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
@model Gem_Auctions_Web.Models.ListingsVM

@{
    ViewData["Title"] = "Create";
}

<h2 style="text-align: center; color: #2f8bed; font-size: 2rem; font-weight: bold; margin-bottom: 1rem;">Create Listing</h2>

<hr style="width: 60%; border-top: 1px solid #bbb; margin: auto; margin-bottom: 2rem;" />

<div style="display: flex; justify-content: center;">
    <div style="width: 100%; max-width: 450px;  border: 3px solid #b07c04; padding: 30px; border-radius: 20px;">
        <form asp-action="Create" enctype="multipart/form-data" style="display: flex; flex-direction: column; gap: 1rem;">
            <div asp-validation-summary="ModelOnly" style="color: #d9534f; font-size: 0.9rem;"></div>

            <div style="display: flex; flex-direction: column;">
                <label asp-for="Title" style="font-size: 1rem; color: #ffffff; margin-bottom: 0.3rem;">Title</label>
                <input asp-for="Title" style="padding: 0.6rem; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="Title" style="color: #d9534f; font-size: 0.85rem; margin-top: 0.3rem;"></span>
            </div>

            <div style="display: flex; flex-direction: column;">
                <label asp-for="Description" style="font-size: 1rem; color: #ffffff; margin-bottom: 0.3rem;">Description</label>
                <input asp-for="Description" style="padding: 0.6rem; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="Description" style="color: #d9534f; font-size: 0.85rem; margin-top: 0.3rem;"></span>
            </div>

            <div style="display: flex; flex-direction: column;">
                <label asp-for="Price" style="font-size: 1rem; color: #ffffff; margin-bottom: 0.3rem;">Starting Bid</label>
                <input asp-for="Price" style="padding: 0.6rem; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="Price" style="color: #d9534f; font-size: 0.85rem; margin-top: 0.3rem;"></span>
            </div>

            <div style="display: flex; flex-direction: column;">
                <label asp-for="Image" style="font-size: 1rem; color: #ffffff; margin-bottom: 0.3rem;">Image</label>
                <input asp-for="Image" accept="image/*" style="padding: 0.6rem; border: 1px solid #ccc; border-radius: 5px;" />
                <span asp-validation-for="Image" style="color: #d9534f; font-size: 0.85rem; margin-top: 0.3rem;"></span>
            </div>

            <input type="hidden" asp-for="IdentityUserId" value="@userManager.GetUserId(User)" />

            <div>
                <input type="submit" value="Create" style="background-color: #007bff; color: #fff; padding: 0.6rem 1.2rem; border: none; border-radius: 5px; cursor: pointer; font-size: 1rem;" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 2rem;">
    <a asp-action="Index" style="color: #2f8bed; font-size: 1rem; text-decoration: none;">Back to List</a>
</div>
